<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.userprofile.ProfileHomePage">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/blue_circle"
        android:src="@drawable/personaal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/personal_Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_box"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawableEnd="@drawable/ic_baseline_play_arrow_24"
        android:drawablePadding="10dp"
        android:fontFamily="@font/mulish_bold"
        android:padding="15dp"
        android:text="Personal information"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView" />

    <TextView
        android:id="@+id/m_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_box"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawableEnd="@drawable/ic_baseline_play_arrow_24"
        android:drawablePadding="10dp"
        android:fontFamily="@font/mulish_bold"
        android:padding="15dp"
        android:text="My Orders"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personal_Info" />

    <TextView
        android:id="@+id/saved_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_box"
        android:drawableStart="@drawable/ic_baseline_settings_24"
        android:drawableEnd="@drawable/ic_baseline_play_arrow_24"
        android:drawablePadding="10dp"
        android:fontFamily="@font/mulish_bold"
        android:padding="15dp"
        android:text="My Saved Addresses"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m_order" />

    <TextView
        android:id="@+id/password_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_box"
        android:drawableStart="@drawable/security_layer_list"
        android:drawableEnd="@drawable/ic_baseline_play_arrow_24"
        android:drawablePadding="10dp"
        android:fontFamily="@font/mulish_bold"
        android:padding="15dp"
        android:text="Password and Security"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saved_address" />

    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_box"
        android:drawableStart="@drawable/logout"
        android:drawableEnd="@drawable/ic_baseline_play_arrow_24"
        android:drawablePadding="10dp"
        android:fontFamily="@font/mulish_bold"
        android:padding="15dp"
        android:text="Logout"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_reset" />


</androidx.constraintlayout.widget.ConstraintLayout>