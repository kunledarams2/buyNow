<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8dp">

    <ImageView
        android:id="@+id/check_x_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_success_icon_green"/>

    <TextView
        android:id="@+id/destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/check_x_mark"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="International Boys Club, Ikeja"/>

    <TextView
        android:id="@+id/distance_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/destination"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/destination"
        tools:text="3.5km"
        android:textSize="12sp"/>

    <View
        android:id="@+id/div"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#3B3B3B"
        app:layout_constraintTop_toTopOf="@id/distance_km"
        app:layout_constraintBottom_toBottomOf="@id/distance_km"
        app:layout_constraintStart_toEndOf="@id/distance_km"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating"
        tools:text="4"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/div"
        app:layout_constraintTop_toTopOf="@id/distance_km"
        android:layout_marginStart="4dp"/>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_star_gold"
        app:layout_constraintStart_toEndOf="@id/rating"
        app:layout_constraintTop_toTopOf="@id/rating"
        app:layout_constraintBottom_toBottomOf="@id/rating"/>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C8C8C8"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/rating"
        android:layout_marginBottom="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>