<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.e.buynow">

    <application
        android:name=".BuyNowApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BuyNow">
        <activity android:name=".view.activity.ExitActivity"></activity>
        <activity
            android:name=".view.activity.AuthnActivity"
            android:label="@string/title_activity_authn"
            android:theme="@style/Theme.BuyNow.NoActionBar" />
        <activity android:name=".view.activity.OnBoardingActivity" />
        <activity android:name=".view.activity.MainActivity" />
        <activity
            android:name=".view.activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>